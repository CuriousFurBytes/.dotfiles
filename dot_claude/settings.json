{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "model": "claude-sonnet-4-6",
    "autoUpdatesChannel": "stable",
    "showTurnDuration": true,
    "cleanupPeriodDays": 30,
    "permissions": {
        "defaultMode": "acceptEdits",
        "allow": [
            "Bash(git diff*)",
            "Bash(git status*)",
            "Bash(git log*)",
            "Bash(git show*)",
            "Bash(git add*)",
            "Bash(git commit*)",
            "Bash(git push*)",
            "Bash(git pull*)",
            "Bash(git fetch*)",
            "Bash(git branch*)",
            "Bash(git checkout*)",
            "Bash(git stash*)",
            "Bash(git merge*)",
            "Bash(git rebase*)"
        ]
    },
    "attribution": {
        "commit": "",
        "pr": ""
    }
}
