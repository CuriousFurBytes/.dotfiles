// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "context_servers": {
        "mcp-server-context7": {
            "enabled": true,
            "remote": false,
            "settings": {},
        },
    },
    "ui_font_family": "Monaspace Krypton Frozen",
    "icon_theme": "Phosphor Icons Theme",
    "buffer_font_family": "Monaspace Argon Frozen",
    "buffer_font_features": {
        "calt": true,
    },
    "ui_font_size": 13.5,
    "buffer_font_size": 13.0,
    "show_whitespaces": "trailing",
    "hover_popover_enabled": true,
    "edit_predictions": {
        "provider": "zed",
        "mode": "eager",
    },
    "debugger": {
        "button": true,
    },
    "search": {
        "button": true,
    },
    "diagnostics": {
        "button": true,
    },
    "terminal": {
        "button": true,
        "alternate_scroll": "off",
        "blinking": "terminal_controlled",
        "copy_on_select": false,
        "dock": "bottom",
        "default_width": 640,
        "default_height": 320,
        "font_family": "Monaspace Krypton Frozen",
        "font_features": null,
        "font_size": null,
        "line_height": "comfortable",
        "option_as_meta": false,
        "working_directory": "current_project_directory",
        "detect_venv": {
            "on": {
                "directories": [".venv", ".env", "venv", "env"],
                "activate_script": "default",
            },
        },
    },
    "status_bar": {
        "cursor_position_button": true,
        "active_language_button": true,
    },
    "git_panel": {
        "button": true,
    },
    "project_panel": {
        "indent_size": 20.0,
        "dock": "left",
        "button": true,
    },
    "languages": {
        "Python": {
            "indent_guides": {
                "background_coloring": "disabled",
                "line_width": 1,
            },
            "soft_wrap": "none",
            "language_servers": ["basedpyright", "pyright", "ruff"],
            "formatter": {
                "external": {
                    "command": "/.venv/bin/ruff",
                    "arguments": ["format", "-"],
                },
            },
            "code_actions_on_format": {
                "source.organizeImports.ruff": true,
                "source.fixAll.ruff": true,
            },
        },
        "TOML": {
            "prettier": {
                "allowed": false,
            },
        },
    },
    "lsp": {
        "ruff": {
            "binary": {
                "env": {
                    "VIRTUAL_ENV": "${worktree}/.venv",
                },
            },
        },
    },
    "prettier": {
        "allowed": true,
    },
    "indent_guides": {
        "background_coloring": "disabled",
        "coloring": "fixed",
    },
    "auto_signature_help": false,
    "use_system_window_tabs": false,
    "bottom_dock_layout": "contained",
    "tabs": {
        "file_icons": true,
        "git_status": true,
    },
    "title_bar": {
        "show_branch_icon": true,
    },
    "inlay_hints": {
        "show_background": true,
        "enabled": false,
    },
    "tab_size": 4,
    "toolbar": {
        "code_actions": true,
        "quick_actions": true,
        "breadcrumbs": true,
    },
    "ui_font_weight": 600.0,
    "on_last_window_closed": "quit_app",
    "when_closing_with_no_tabs": "close_window",
    "telemetry": {
        "diagnostics": false,
        "metrics": false,
    },
    "preview_tabs": {
        "enabled": false,
    },
    "minimap": {
        "current_line_highlight": "all",
        "thumb_border": "full",
        "thumb": "always",
        "show": "always",
    },
    "autosave": {
        "after_delay": {
            "milliseconds": 2000,
        },
    },
    "auto_indent_on_paste": true,
    "ensure_final_newline_on_save": true,
    "base_keymap": "VSCode",
    "theme": {
        "mode": "system",
        "light": "One Light",
        "dark": "Ros√© Pine",
    },
    "auto_install_extensions": {
        "html": true,
        "git-firefly": true,
        "github-actions": true,
        "docker-compose": true,
        "toml": true,
        "rose-pine-theme": true,
        "phosphor-icons-theme": true,
        "mermaid": true,
        "log": true,
        "env": true,
        "mcp-server-context7": true,
        "mcp-server-linear": true,
        "jinja2": true,
    },
    "agent": {
        "commit_message_model": {
            "provider": "copilot_chat",
            "model": "gemini-3-flash-preview",
        },
        "default_model": {
            "provider": "anthropic",
            "model": "claude-sonnet-4-5-20250929",
        },
        "thread_summary_model": {
            "provider": "copilot_chat",
            "model": "gemini-3-flash-preview",
        },
        "default_profile": "write",
        "tool_permissions": {
            "default": "allow",
            "tools": {
                "edit_file": {
                    "default": "allow",
                },
                "terminal": {
                    "default": "confirm",
                    "always_allow": [
                        { "pattern": "^git\\s+(diff|status|log|show)" },
                        { "pattern": "^read\\b" },
                        { "pattern": "^glob\\b" },
                        { "pattern": "^grep\\b" },
                        { "pattern": "^rg\\b" },
                        { "pattern": "^ls\\b" },
                    ],
                },
            },
        },
    },
}
